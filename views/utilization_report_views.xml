<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_arkamen_utilization_report_form" model="ir.ui.view">
        <field name="name">arkamen.utilization.report.form</field>
        <field name="model">arkamen.utilization.report</field>
        <field name="arch" type="xml">
            <form string="Laporan Utilisasi SDM">
                <group>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </group>
                <footer>
                    <button name="action_generate_report" string="Tampilkan Laporan" type="object" class="btn-primary"/>
                    <button string="Batal" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="view_arkamen_utilization_report_internal_list" model="ir.ui.view">
        <field name="name">arkamen.utilization.report.internal.list</field>
        <field name="model">arkamen.utilization.report.internal.line</field>
        <field name="arch" type="xml">
            <list>
                <field name="employee_name"/>
                <field name="skills"/>
                <field name="skill_level"/>
                <field name="project"/>
                <field name="vendor"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="allocation_percentage"/>
            </list>
        </field>
    </record>

    <record id="view_arkamen_utilization_report_external_list" model="ir.ui.view">
        <field name="name">arkamen.utilization.report.external.list</field>
        <field name="model">arkamen.utilization.report.external.line</field>
        <field name="arch" type="xml">
            <list>
                <field name="employee_name"/>
                <field name="skills"/>
                <field name="tariff"/>
                <field name="project"/>
                <field name="vendor"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="allocation_percentage"/>
            </list>
        </field>
    </record>

    <record id="action_arkamen_utilization_report" model="ir.actions.act_window">
        <field name="name">Laporan Utilisasi SDM</field>
        <field name="res_model">arkamen.utilization.report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_arkamen_utilization_report_form"/>
    </record>

    <record id="action_arkamen_utilization_report_internal" model="ir.actions.act_window">
        <field name="name">Data Utilisasi Karyawan Internal</field>
        <field name="res_model">arkamen.utilization.report.internal.line</field>
        <field name="view_mode">list</field>
        <field name="target">current</field>
        <field name="view_id" ref="view_arkamen_utilization_report_internal_list"/>
    </record>

    <record id="action_arkamen_utilization_report_external" model="ir.actions.act_window">
        <field name="name">Data Utilisasi Karyawan Eksternal</field>
        <field name="res_model">arkamen.utilization.report.external.line</field>
        <field name="view_mode">list</field>
        <field name="target">current</field>
        <field name="view_id" ref="view_arkamen_utilization_report_external_list"/>
    </record>

    <menuitem id="arkamen_utilization_report_menu"
        name="Laporan Utilisasi SDM"
        parent="arkamen_root_menu"
        sequence="9"/>

    <menuitem id="arkamen_utilization_report_menu_internal"
        name="Utilisasi SDM Internal"
        parent="arkamen_utilization_report_menu"
        action="action_arkamen_utilization_report"
        sequence="10"/>

</odoo>